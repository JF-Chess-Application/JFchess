<div class="main">
  <div class="left">Filler</div>
  <div class="board-container">
    <div class="board">

      <% 8.times do |i| %>
        <div class="row">
          <% 8.times do |j| %>
            <div class="square" id="<%= j %>-<%= 7-i %>">
              <% piece = @game.pieces.find_by(position_x: j, position_y: 7-i) %>
              <% if piece %>
                <%= link_to edit_piece_path(piece) do %>
                  <%= render_piece(piece.position_x, piece.position_y) %>
                <% end %>
              <% end %>
                
            </div>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="right">Filler</div>
</div>

<h3><%= params %></h3>

